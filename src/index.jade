extends _layouts/base

include _modules/slider/slider

block content
    main.home
        section.home__hero
            .home__hero__image
                img(src="/images/home/main.jpg")
            .home__hero__content
                .home__hero__wrapper
                    h3.home__hero__subtitle sebastián Zuccardi
                    h2.home__hero__title Profundizar en vez de expandir
                    a.home__hero__button(href="#") descubrir
        section.apuntes
            .container
                .row
                    .apuntes__item.col-xs-24.col-sm-15
                        h2.apuntes__title= site.data.home.apuntes.title
                        each item in site.data.home.apuntes.items
                            a.apuntes__item__wrapper(href="/detalle-nota")
                                .apuntes__item__image
                                    img(src=item.img)
                                .apuntes__item__data
                                    p.apuntes__item__data--subtitle= item.subtitle
                                    p.apuntes__item__data--title= item.title
                                    p.apuntes__item__data--desc= item.desc
                                    p.apuntes__item__data--button Leer
                        .apuntes__decoration
                        button.apuntes__more-button Cargar más
                        
                    .col-xs-24.col-sm-8.col-sm-offset-1
                        h2.apuntes__title.apuntes__title--alt Destacados
                        .row
                            .col-xs-24
                                .apuntes__container
                                    each item in site.data.home.destacados.items
                                        .categorias__item
                                            a(href=item.url)
                                                .categorias__item-img
                                                    img(src=item.img)
                                                .categorias__item-data
                                                    p.categorias__item-data-category= item.category
                                                    p.categorias__item-data-title= item.title
        .home__bottom-pattern
            img(src="/images/home/footer-pattenr.png")
                        
