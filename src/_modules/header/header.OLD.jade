header.header
    .container.header__container
        .header__logo.wow.fadeInDown
            a(href="/")
                | <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#logo"></use></svg> 
        
        .header__hamburguer.wow.fadeInRight
            span
            span
            span
            
        nav.header__nav
            a.header__nav__close
                span
                span
            ul.header__menu
                each item in site.data.header
                    li
                        a(href=item.url)= item.name
                        if item.submenu
                            ul.header__submenu
                                each link in item.submenu
                                    li
                                        a(href=link.url)= link.name

            .header__social
                a.header__login(href="#")
                    | Ingresar
                    i.material-icons account_circle
                    
                ul.header__social__list
                    each red in site.data.social
                        li
                            a(href=red.url, target="_blank")
                                i(class="fa fa-#{red.name}")
                                
                a.header__pro(href="/area-profesionales")
                    i.material-icons school
                    | Area profesionales
    
    form.header__search
        .container
            button.header__search__button
                i.material-icons search
            input.header__search__input(type="text", placeholder="Busca tu vino acá")
            
            a.header__search__advanced(href="/busqueda-avanzada")
                | Búsqueda Avanzada
                i.material-icons arrow_downward
